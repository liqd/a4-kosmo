{% block cta_url %}{% withorganisation action.project.organisation %}{% if action.target.get_absolute_url %}{{ email.get_host }}{{ action.target.get_absolute_url }}{% else %}{{ email.get_host }}{{ action.project.get_absolute_url }}{% endif %}{% endwithorganisation %}{% endblock %}
